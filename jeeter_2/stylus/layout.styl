	overflow-y: auto !important*/
	
body.admin-menu
	margin-top: 29px !important

body
#page-wrapper
#page
#top-zone
#front-top
#top-bar
#branding
#header
#page-title-wrapper
#breadcrumb-wrapper
#important
#ayudas
#main-wrapper
#main
#prefooter
#footer
#footer-menu-wrapper
#footer-wrapper
	center()
	
.clearfix
	cf()
	
#top-zone
	padding-bottom: 100px

#top-bar
	position: relative
	//position: absolute
	top: 0
	width: 100%
.top-bar-left
	column(1/2, gutter: 0)
	min-height: 60px
.top-bar-right
	column(1/2, gutter: 0)
	float: right
	min-height: 60px
	

#header
	//padding-top: 60px
	padding-top: 0px
	position: relative
#logo
#name-and-slogan
	display: block
	margin: 0

#site-name
#site-slogan
	display: inline-block
	
#site-name
	font-size: 2em
#site-slogan
	font-size: 1.6em
.front 
	#site-name
		font-size: 3em
	#site-slogan
		font-size: 2.4em
	
.mini-logo-img
	max-width: 64px
	height: auto

/*for scrollReveal plugin module*/
.front
	#logo
	#site-name
	#site-slogan
		visibility: hidden

	
#page-title-wrapper
	padding: 20px 0
	


/*Breadcrumb*/
#breadcrumb-wrapper 
	padding: 20px 0 12px
.breadcrumb .separator
	position: relative
	top: 6px


/*Mensajes y ayuda*/
#ayudas
	padding: 20px
.messages
	padding: 10px 50px
	position: relative
span.close-button
	position: absolute
	right: 10px
	top: 50%
	margin-top: -15px


/*sidebar classes*/
.two-sidebars 
	#sidebar-first 
	#sidebar-second
		span(1/5)
	#content
		span(3/5)

.one-sidebar
	#sidebar-first 
	#sidebar-second
		span(1/4)
	#content
		span(3/4)
		

