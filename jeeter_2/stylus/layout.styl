/* ----------------------------------------- contenido principal ----------------------------------------- */
body:not(.front) #content
#sidebar-first 
#sidebar-second
	padding: 20px
	
#block-search-form 
	margin-top: 0
	margin-right: 0
	.custom-search-block
		display: inline-block
		position: relative
		top: 0px
		width: 0
		opacity: 0
		height: 48px
		padding: 0px 58px 10px 10px
		overflow: hidden
		transition: all .25s ease-out
		&.visible
			opacity: 1
			width: 100%
	#search-trigger
		padding: 10px
		position: absolute 
		right: 0
		top: 0
	
ul.primary li
	display: inline-block
ul.primary li a
	display: block
	padding: 5px 20px
	position: relative
	top: 1px
	border-radius: 3px 3px 0 0
	
#block-system-main
	article
		padding: 20px


.views-exposed-widgets 
	margin: 20px auto
	text-align: center
	
.views-exposed-form .views-exposed-widget
	float: none
	padding: .5em 1em 0 0
	display: inline-block
.views-fluidgrid-wrapper
	margin: auto
.masonry-brick 
	margin: 6px 0
	.views-fluidgrid-item-inner
		position: relative
	h3
	h4
		position: absolute
		left: 0
		width: 100%
		margin: 0 auto
		text-align: center
		opacity: 0
		transition: all .25s ease-out
		background: #fff
	h3
		top: 0px
	h4
		bottom: 0px
	&:hover
		h3,h4
			opacity: 1
			

/*HTML Elements*/
iframe
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	
blockquote
	margin: 32px 0 32px 16px
	padding: 1px 16px
	
img
	max-width: 100%
	height: auto

input[type="submit"]
	cursor: pointer

table
	width: 100%
	max-width: 100%

a
	transition: all .25s ease-out


/*-----------------Comentarios------------------*/
//pre-comments (node-links)
.node-links-wrapper li
	display: inline-block
#block-system-main article.comment
	position: relative
	margin: 40px 20px 100px
	padding: 60px 20px 20px;
	.comment-arrow
		width: 42px
		height: 42px
		position: absolute
		left: -42px
		top: 42px
		margin-top: -21px
	.comment-picture
		position: absolute
		top: -30px
		left: 50%
		margin-left: -50px
		.user-picture
			max-width: 100px
			max-height: 100px
			overflow: hidden
	.new
		position: absolute
		right: -3px
		top: -6px
		padding: 3px 5px
.indented
	.comment-arrow
		top: -42px !important
		left: 21px !important
		margin-top: 0 !important
		
.form-actions
	text-align: center
	input
		margin: 10px;



/*prefooter*/
#prefooter
	padding: 40px 3%
.prefooter-left
