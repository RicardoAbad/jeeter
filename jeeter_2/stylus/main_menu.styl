/* MENU ICON */
/*  Layout  */
.navicon 
	position: fixed
	height: 35px
	width: 45px
	top: 0px
	left: 0px
	padding: 4px
	z-index: 1010
	box-sizing: content-box
	transition: left 0.4s ease-out
	&.active
		left:71px
		margin-left:-26px
		top: 30px
	#nav-toggle
		position: absolute
		left: 9px
		top: 9px
		cursor: pointer
		padding: 10px 35px 16px 0px
		span
		span:before
		span:after
			transition: all 500ms ease-in-out
			cursor: pointer
			border-radius: 1px
			height: 5px
			width: 35px
			position: absolute
			display: block
			content: ''
		span:before
			top: -10px
		span:after
			bottom: -10px
		&.active span
			&:before
				transform: rotate(45deg)
				top: 0
			&:after
				transform: translateY(-10px) rotate(-45deg)
				top: 10px
.admin-menu .navicon
	top: 29px
	



